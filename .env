# Application
VITE_APP_NAME=Radiant UI
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Authentication
VITE_AUTH_TOKEN_KEY=radiant_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=radiant_refresh_token
VITE_AUTH_TOKEN_EXPIRY=3600000
VITE_AUTH_REFRESH_TOKEN_EXPIRY=604800000

# Feature Flags
VITE_ENABLE_MSW=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false

# Development
VITE_DEV_TOOLS=true
VITE_LOG_LEVEL=debug

# Internationalization
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr,de

# Storage
VITE_LOCAL_STORAGE_PREFIX=radiant_
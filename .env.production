# Production Environment Configuration
# Copy this file and update with your production values

# Environment
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_URL=https://api.example.com
VITE_API_TIMEOUT=30000

# Authentication
VITE_AUTH_DOMAIN=auth.example.com
VITE_AUTH_CLIENT_ID=your-auth-client-id
VITE_AUTH_REDIRECT_URI=https://app.example.com/callback

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_SENTRY=true
VITE_ENABLE_PWA=true

# Third-party Services
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_PLAUSIBLE_DOMAIN=app.example.com

# Public URLs
VITE_PUBLIC_URL=https://app.example.com
VITE_CDN_URL=https://cdn.example.com

# Build Info (set by CI/CD)
VITE_BUILD_TIMESTAMP=
VITE_COMMIT_SHA=